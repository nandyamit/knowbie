{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "moduleResolution": "node",
    "lib": ["es6"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}